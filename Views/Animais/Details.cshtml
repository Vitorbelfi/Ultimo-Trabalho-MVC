@model ProjetoApi.Models.Animais

@{
    ViewData["Title"] = "Detalhes do Animal";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="details-container">
    <h4 class="details-subtitle">Animais</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nome do Animal</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalNome)</dd>

        <dt class="col-sm-3">Raça</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalRaca)</dd>

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalTipo)</dd>

        <dt class="col-sm-3">Cor</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalCor)</dd>

        <dt class="col-sm-3">Sexo</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalSexo)</dd>

        <dt class="col-sm-3">Foto (URL)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalFoto)</dd>

        <dt class="col-sm-3">Data de Desaparecimento</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalDtDesaparecimento)</dd>

        <dt class="col-sm-3">Data de Encontro</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalDtEncontro)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalStatus)</dd>

        <dt class="col-sm-3">Usuário</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Usuario.UsuarioNome)</dd>
    </dl>
    <div class="action-links text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    :root {
        --primary-color: pink;
        --secondary-color: #6c757d;
        --danger-color: #dc3545;
    }

    /* Título da Página */

    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: var(--primary-color);
    }

    /* Botões */

    .btn {
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-info {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-info:hover {
            background-color: red;
        }

    .btn-secondary {
        background-color: var(--secondary-color);
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-primary {
        margin-left: 560px; /* Se ainda necessário */
    }

    .btn-danger {
        background-color: var(--danger-color);
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Tabelas */

    .table {
        width: 90%;
        margin: auto;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
        }
</style>
