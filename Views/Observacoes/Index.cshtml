@model IEnumerable<ProjetoApi.Models.Observacoes>

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-title">Lista de Observações</h1>

<p class="create-link">
    <a asp-action="Create" class="btn btn-primary">Criar Nova Observação</a>
</p>
<table class="table table-striped">
    <thead class="table-header">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ObservacaoDescricao)</th>
            <th>@Html.DisplayNameFor(model => model.ObservacaoLocal)</th>
            <th>@Html.DisplayNameFor(model => model.ObservacaoData)</th>
            <th>@Html.DisplayNameFor(model => model.AnimalId)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ObservacaoDescricao)</td>
                <td>@Html.DisplayFor(modelItem => item.ObservacaoLocal)</td>
                <td>@Html.DisplayFor(modelItem => item.ObservacaoData)</td>
                <td>@Html.DisplayFor(modelItem => item.AnimalId)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
 :root {
        --primary-color: pink;
        --secondary-color: #6c757d;
        --danger-color: #dc3545;
    }

    /* Título da Página */

    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: var(--primary-color);
    }

    /* Botões */

    .btn {
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-info {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-info:hover {
            background-color: red;
        }

    .btn-secondary {
        background-color: var(--secondary-color);
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-primary {
        margin-left: 560px; /* Se ainda necessário */
    }

    .btn-danger {
        background-color: var(--danger-color);
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Tabelas */

    .table {
        width: 90%;
        margin: auto;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
        }
</style>
