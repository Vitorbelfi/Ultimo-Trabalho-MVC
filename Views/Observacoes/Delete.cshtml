@model ProjetoApi.Models.Observacoes

@{
    ViewData["Title"] = "Excluir Observação";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<h3 class="confirm-message">Tem certeza que deseja excluir esta observação?</h3>
<div class="confirmation-container">
    <h4 class="form-title">Observações</h4>
    <hr class="form-divider" />
    <dl class="row detail-list">
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.ObservacaoDescricao)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.ObservacaoDescricao)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.ObservacaoLocal)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.ObservacaoLocal)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.ObservacaoData)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.ObservacaoData)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.AnimalId)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.AnimalId)
        </dd>
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10 detail-value">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
    </dl>

    <div class="text-center">
        <form asp-action="Delete" class="form-group">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    :root {
        --primary-color: pink;
        --secondary-color: #6c757d;
        --danger-color: #dc3545;
    }

    /* Título da Página */

    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: var(--primary-color);
    }

    /* Botões */

    .btn {
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-info {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-info:hover {
            background-color: red;
        }

    .btn-secondary {
        background-color: var(--secondary-color);
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-primary {
        margin-left: 560px; /* Se ainda necessário */
    }

    .btn-danger {
        background-color: var(--danger-color);
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Tabelas */

    .table {
        width: 90%;
        margin: auto;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
        }
</style>
