@{
    var pageTitle = "Home Page";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle</title>
    <style>
        /* Definições Globais */

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Cabeçalho */

        header {
            background-color: #007bff;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

            header h1 {
                margin: 0;
            }

        /* Navegação */

        nav {
            background-color: #0056b3;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

            nav ul {
                list-style: none;
                padding: 0;
            }

                nav ul li {
                    display: inline;
                    margin: 0 10px;
                }

                    nav ul li a {
                        color: #fff;
                        text-decoration: none;
                    }

        /* Container Principal */

        .container {
            width: 80%;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Seção Hero */

        .hero {
            text-align: center;
            padding: 50px 0;
        }

            .hero h1 {
                margin: 0;
                color: #007bff;
            }

            .hero p {
                font-size: 18px;
                margin-top: 10px;
                color: #555;
            }

        /* Botão de Call to Action (CTA) */

        .cta-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .cta-btn:hover {
                background-color: #0056b3;
            }

        /* Seção de Recursos */

        .features {
            text-align: center;
            margin-top: 50px;
        }

        .feature-item {
            margin-bottom: 30px;
        }

            .feature-item i {
                font-size: 36px;
                margin-bottom: 10px;
                display: block;
                color: #007bff;
            }

            .feature-item h3 {
                margin: 0;
                color: #333;
            }

            .feature-item p {
                color: #555;
            }

        /* Rodapé */

        footer {
            background-color: #0056b3;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }

        .social-icons {
            list-style: none;
            padding: 0;
            margin-top: 10px;
        }

            .social-icons li {
                display: inline;
                margin: 0 10px;
            }

                .social-icons li a {
                    color: #fff;
                    font-size: 20px;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }

                    .social-icons li a:hover {
                        color: #ccc;
                    }

    </style>
</head>
<body>

    <header>
        <h1>Cadastre um desaparecido </h1>
    </header>

    <nav>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </nav>

    <div class="container">
       
    </div>


</body>

