@model ProjetoApi.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuário";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="container">
    <h4 class="text-center">Usuário</h4>
    <hr class="form-divider" />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" class="form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UsuarioNome" class="control-label"></label>
                    <input asp-for="UsuarioNome" class="form-control" />
                    <span asp-validation-for="UsuarioNome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioEmail" class="control-label"></label>
                    <input asp-for="UsuarioEmail" class="form-control" />
                    <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioTelefone" class="control-label"></label>
                    <input asp-for="UsuarioTelefone" class="form-control" />
                    <span asp-validation-for="UsuarioTelefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioSenha" class="control-label"></label>
                    <input asp-for="UsuarioSenha" class="form-control" />
                    <span asp-validation-for="UsuarioSenha" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-save" />
                </div>
                <div class="action-links text-center">
                    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
                </div>
            </form>
        </div>
    </div>
</div>



<style>
    :root {
        --primary-color: pink;
        --secondary-color: #6c757d;
        --danger-color: #dc3545;
    }

    /* Título da Página */

    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2em;
        color: var(--primary-color);
    }

    /* Botões */

    .btn {
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-info {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-info:hover {
            background-color: red;
        }

    .btn-secondary {
        background-color: var(--secondary-color);
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-primary {
        margin-left: 560px; /* Se ainda necessário */
    }

    .btn-danger {
        background-color: var(--danger-color);
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Tabelas */

    .table {
        width: 90%;
        margin: auto;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
